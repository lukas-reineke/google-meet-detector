{
    "manifest_version": 2,
    "name": "Google Meet Detector",
    "version": "1.2",
    "description": "Detects if you are in a Google Meet and notifies Home Assistant.",
    "permissions": ["tabs", "alarms", "storage", "*://meet.google.com/*"],
    "background": {
        "scripts": ["background.js"]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}
